<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SMA.Pages.TradePopupPage">
    <VerticalStackLayout>
        <Label x:Name="lblAccount" Text="account name" Margin="10" HorizontalTextAlignment="Center"/>
        <Label x:Name="lblDesc" Text="trade description" Margin="10" HorizontalTextAlignment="Center"/>
        <Label x:Name="lblStatus" Text="status" Margin="10" HorizontalTextAlignment="Center"/>
        <HorizontalStackLayout>
            <Button Text="Deny" x:Name="btnDeny" BackgroundColor="IndianRed" CornerRadius="10"/>
            <Button Text="Accept" x:Name="btnAccept" BackgroundColor="Lime" CornerRadius="10"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>